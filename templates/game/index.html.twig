{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - gra{% endblock %}

{% block body %}
    
    <div class="container p-5 main">
    
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}

        <h1 class="h3 mb-3 mt-5 font-weight-normal text-center">Pokój</h1>

        <div> {{ round }}. {{ question }} </div>

        {% if type == 'form' %}
            {% if confirm == false %}
                {% form_theme answer 'bootstrap_4_layout.html.twig' %}
                {{ form_start(answer) }}
                    {{ form_row(answer.answer) }}

                    <button type="submit" class="button">Odpowiedz</button>
                {{ form_end(answer) }}
            {% else %}
                <br><div>Odpowiedź już została przez Ciebie udzielona</div>
            {% endif %}
        {% elseif type == 'result' %}
            {% if sum > 0 %}
                <br><ol>
                    {% for t in table|sort((a, b) => a.1 <=> b.1)|reverse %}
                        <li> {{ t.0 }} - {{ t.1 }} głosy ({{(t.1 / sum * 100)|round(2)}}%) </li>
                    {% endfor %}
                </ol>
            {% endif %}
        {% endif %}

        <br><div id="usersNumber">{{ usersNumber }}</div>

        <br>
        <a href="/room?leaveRoom" class="text-white">Opuść pokój</a>
        {% if isAdmin %}
             | 
            {% if round > 1 %}
                <br><a href="/game?previousRound" class="text-white">Poprzednia runda</a> | 
            {% endif %}

            {% if type == 'form' %}
                <a href="/game?showResult" class="text-white">Wyświetl wyniki</a> | 
            {% elseif type == 'result' %}
                <a href="/game?showGame" class="text-white">Wyświetl formularz</a> | 
            {% endif %}

            {% if round < allRound %}
                <a href="/game?nextRound" class="text-white">Następna runda</a> | 
                <a href="/game?theEnd" class="text-white">Zakończ</a>
            {% else %}
                <a href="/game?nextRound" class="text-white">Zakończ</a>
            {% endif %}
        {% endif %}

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/gameAjax.js') }}"></script>
    <script src="{{ asset('assets/js/usersNumber.js') }}"></script>
{% endblock %}